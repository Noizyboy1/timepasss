<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".MainMenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorAccent">
        
        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#fff"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rupees"
                        android:textSize="25sp"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="25sp"
                        android:id="@+id/userRupees"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Points"
                        android:textColor="@color/colorAccent"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="25sp"
                        android:textColor="#000"
                        android:id="@+id/userPoints"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="2"
            android:id="@+id/a111"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_btn"
                android:textColor="@android:color/white"
                android:id="@+id/btnProfile"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="Profile" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btnLearn"
                android:background="@drawable/back_btn"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="Learn" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="2"
            android:id="@+id/a112"
            android:layout_below="@+id/a111"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/back_btn"
                android:textColor="@android:color/white"
                android:id="@+id/btnEarning1"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="Earning 1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btnEarning2"
                android:background="@drawable/back_btn"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="Earning 2" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="2"
            android:id="@+id/a113"
            android:layout_below="@id/a112"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btnEarning3"
                android:background="@drawable/back_btn"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="Earning 3" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:id="@+id/btnGetPayment"
                android:background="@drawable/back_btn"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="Get Payment" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="2"
            android:id="@+id/a114"
            android:layout_below="@id/a113"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:id="@+id/btnContactUs"
                android:background="@drawable/back_btn"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="Contact Us" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:id="@+id/btnLogout"
                android:background="@drawable/back_btn"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="Logout" />

        </LinearLayout>



    </RelativeLayout>
    
</LinearLayout>