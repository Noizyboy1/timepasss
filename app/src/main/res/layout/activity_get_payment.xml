<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GetPaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:text="Get Payment"
            android:textSize="45sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15sp"
            android:background="@drawable/textbox"
            android:drawableStart="@drawable/ic_account_box_black_24dp"
            android:drawableLeft="@drawable/ic_account_box_black_24dp"
            android:id="@+id/etCNIC"
            android:layout_marginTop="30dp"
            android:textSize="15sp"
            android:hint="Enter Your UPI id"
            android:layout_gravity="center"
            android:textColor="#000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15sp"
            android:background="@drawable/textbox"
            android:drawableStart="@drawable/ic_phone_android_black_24dp"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:id="@+id/etChoice"
            android:inputType="number"
            android:layout_marginTop="30dp"
            android:textSize="15sp"
            android:hint="PhonePay/Paytm/GooglePay "
            android:layout_gravity="center"
            android:textColor="#000"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@color/colorAccent"
            android:text="Withdraw"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:id="@+id/btnrequestpayment"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold">
        </Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:text="Payment will be done within 72hrs"
            android:textColor="#EA0F0F"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@color/colorAccent"
            android:text="Please Rate here"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/btnrateUs"
            android:textColor="#82368F"
            android:textSize="20sp"
            android:textStyle="bold">
        </Button>



    </LinearLayout>


</LinearLayout>